@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
                $('#Image').attr('src', url);
            };
            finder.popup();
        });

        $('#txtImage').css('display', 'none');

