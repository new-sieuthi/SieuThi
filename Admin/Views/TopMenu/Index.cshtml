@model PagedList.IPagedList<Model.EF.TopMenu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách TopMenu
                <div class="pull-right">
                    @*<i class="fa fa-plus"></i>*@
                    @Html.ActionLink("Tạo mới", "Create", "TopMenu")
                </div>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Trạng thái</th>
                                <th>Ảnh</th>
                                <th>Xóa/ Sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count(); i++)
                            {
                                <tr id="row_@Model[i].ID">
                                    <td>@(i + 1)</td>
                                    <td>@Model[i].ID</td>
                                    <td>@Model[i].Name</td>
                                    <td><a href="#" class="btn-status" data-id="@Model[i].ID">@(Model[i].Status == true ? "Hoạt động" : "Tạm khóa")</a></td>
                                    @*<td>@(Model[i].Status == true ? "Hoạt động" : "Tạm khóa")</td>*@
                                    <td><img width="100px" height="80px" src="@Model[i].Image" alt="Alternate Text" /></td>
                                    <td class="center">
                                        <a href="/Admin/TopMenu/Update/@Model[i].ID">Sửa</a>|
                                        @Ajax.ActionLink("Xóa","Delete",new { @id = Model[i].ID }, new AjaxOptions {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_"+Model[i].ID+"').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


@section jsFooter{
    <script src="/Assets/js/controller/topMenuController.js"></script>
}

